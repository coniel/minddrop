{
  "name": "minddrop-md",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "typecheck:no-cache": "turbo run typecheck --no-chache",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@minddrop/eslint-config": "workspace:*",
    "@trivago/prettier-plugin-sort-imports": "^5.2.0",
    "eslint": "^9.16.0",
    "husky": "^8.0.3",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "vitest": "^0.31.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.27.1"
}
